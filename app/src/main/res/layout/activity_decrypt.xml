<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Decrypt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Encrypted Message"
                android:layout_weight="0.8"
                android:textSize="17sp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/encrypttodecrypt">

                <requestFocus />
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Encryption key"
                android:layout_weight="0.8"
                android:textSize="17sp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:id="@+id/encryptionkey">

                <requestFocus />
            </EditText>


        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="100dp"
            android:id="@+id/decrypbtn"
            android:text="       Decrypt      "
            android:background="@drawable/round_btn"
            android:backgroundTint="#0091EA"
            android:textColor="#fff"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dtext"
            android:visibility="gone"
            android:layout_marginTop="10dp"

            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Decrypted Message"
                android:layout_weight="0.8"
                android:textSize="17sp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:id="@+id/decryptedtext">

                <requestFocus />
            </EditText>


        </LinearLayout>









    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>